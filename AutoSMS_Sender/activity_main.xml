<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/message"
        android:layout_gravity="center_vertical"
        android:width="400dp"
        android:hint="@string/message"
        android:layout_below="@+id/number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|phone"
        android:ems="10"
        android:id="@+id/number"
        android:layout_alignParentTop="true"
        android:hint="@string/number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:id="@+id/dateBut"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:id="@+id/timeBut"
        android:layout_below="@+id/dateBut"
        android:layout_alignLeft="@+id/dateBut"
        android:layout_alignStart="@+id/dateBut"
        android:layout_marginTop="26dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:id="@+id/sendBut"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/clearBut"
        android:layout_alignEnd="@+id/clearBut"
        android:layout_alignLeft="@+id/clearBut"
        android:layout_alignStart="@+id/clearBut" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:id="@+id/clearBut"
        android:layout_above="@+id/sendBut"
        android:layout_toRightOf="@+id/timeBut"
        android:layout_alignRight="@+id/number"
        android:layout_alignEnd="@+id/number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateField"
        android:hint="@string/dateHint"
        android:layout_above="@+id/timeBut"
        android:layout_toRightOf="@+id/dateBut"
        android:layout_alignRight="@+id/message"
        android:layout_alignEnd="@+id/message"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeField"
        android:hint="@string/timeHint"
        android:layout_alignBottom="@+id/timeBut"
        android:layout_alignLeft="@+id/dateField"
        android:layout_alignStart="@+id/dateField"
        android:layout_alignRight="@+id/dateField"
        android:layout_alignEnd="@+id/dateField"
        android:editable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showLog"
        android:id="@+id/logBut"
        android:layout_above="@+id/clearBut"
        android:layout_alignLeft="@+id/clearBut"
        android:layout_alignStart="@+id/clearBut"
        android:layout_alignRight="@+id/clearBut"
        android:layout_alignEnd="@+id/clearBut" />


</RelativeLayout>
